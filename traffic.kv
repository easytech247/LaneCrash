<root>:
    id: sm
    game_screen: game_screen
    MenuScreen:
        id: menu_screen
        name: "menu"
        mw: mw
        MenuWidget:
            id: mw
            exit_btn: exit_btn
            play_btn: play_btn
            htp_btn: htp_btn
            sm: sm
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: menu_screen.size
                    pos: menu_screen.pos
            Cbutton:
                id: play_btn
                src: "imgs/play.png"
                x: root.x+(root.width/8)
                y: root.y+(root.height/9)
                width: root.width/4
                on_press: mw.goto_game_screen()
                
            Cbutton:
                id: htp_btn
                src: "imgs/src.jpg"
                center: root.center
                width: root.width/4
                on_press: mw.goto_help_screen()
                
            Cbutton:
                id: exit_btn
                src: "imgs/exit.jpg"
                x: root.width-self.width
                y: root.height-self.height
                width: root.width/4
                on_press: app.stop()
                
            Cbutton:
                id: hs
                src: "imgs/hs.jpg"
                x: root.x+(root.width/15)
                y: root.top - self.height- (root.height/15)
                width: root.width/4
                on_press: mw.goto_hs_screen()
                    
    GameScreen:
        id: game_screen
        name: "game"
        field: field
        on_enter: self.field.start()
        Field:
            id: field
            ScoreLabel:
                id: socre_label
                text: "score:%s"%str(field.score)
                y: 400
                x: 400
                color: 1,0,0,1
            
    HelpScreen:
        id: help_screen
        name: "help"
        HelpWidget:
        
    HighScoreScreen:
        id: hs
        name: "highscore"
        HighScoreWidget:



        

<Field>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: root.size
            pos: root.pos
            source: 'imgs/dsbg.jpg'
        Color:
            rgba: .3,.4,.7,1
        Rectangle:
            size: (root.vehicle_width+root.vls),root.height
            pos: ((root.center_x-(root.lane_spacing*0.5))-root.vehicle_width-root.vls),root.y
            source: 'imgs/lbg.jpg'
        Rectangle:
            size: (root.vehicle_width+root.vls),root.height
            pos: (root.center_x+(root.lane_spacing*0.5)),root.y
            source: 'imgs/lbg.jpg'
            
        Rectangle:
            size: root.width,(root.vehicle_width+root.vls)
            pos: root.x,(root.center_y+(root.lane_spacing*0.5))
            source: 'imgs/lbg.jpg'            
        Rectangle:
            size: root.width,(root.vehicle_width+root.vls)
            pos: root.x,((root.center_y-(root.lane_spacing*0.5))-root.vehicle_width-root.vls)
            source: 'imgs/lbg.jpg'
           

            
<CrashPop>:
    BoxLayout:
        id: crashbl
        canvas.before:
            Rectangle:
                size: crashbl.size
                pos: crashbl.pos 
                source: "imgs/bgp.png"
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Oops!!!! There was a crash"

            Label:   
                text: "SCORE: "+str(root.score)   
        BoxLayout:   
            Button:
                text: "Again"
                on_press: root.field.start()
            Button:
                text: "Menu"
                on_press: app.root.current = "menu"
            Button:
                text: "Exit"
                on_press: app.stop()

                
                
<Cbutton>:
    canvas:
        Ellipse:
            pos: root.pos
            size: root.size
            source: root.src
    height: root.width
    
<TutImage>:
    canvas.before:
        Rectangle:
            source: root.src
            size: root.size
            pos: root.pos
    size_hint: None,None
    height: 100
<HelpWidget>:
    ScrollView:
        size_hint: None,None
        size: root.size
        GridLayout:
            size_hint: None,None
            width: root.width
            height: root.height*2
            cols: 1
            padding: 5
            spacing: 5
            TutImage:
                width: root.width
            TutImage:
            TutImage:
            TutImage:
            TutImage:
        
<HighScoreWidget>:
    Label:
        center: root.center
        width: root.width/4
        height: root.height/7
        font_size: root.width/5
        text: str(root.hst)
    
        
        